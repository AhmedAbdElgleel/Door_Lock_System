#ifndef UART_PRIVATE_H_
#define UART_PRIVATE_H_
#include "std_types.h"

/****************************************************************************************************
 *       Registers type structure declaration for Uart Registers								    *
 ***************************************************************************************************/
typedef union
{
	uint8 Byte;
	struct
	{
		uint8 Bit0 :1;
		uint8 Bit1 :1;
		uint8 Bit2 :1;
		uint8 Bit3 :1;
		uint8 Bit4 :1;
		uint8 Bit5 :1;
		uint8 Bit6 :1;
		uint8 Bit7 :1;
	} Bits;
} Uart_UDR_Type;


#endif /* UART_PRIVATE_H_ */
